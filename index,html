    <script>
        document.getElementById('convertButton').onclick = function () {
            const jsCode = document.getElementById('javascriptCode').value;
            let phpCode = '';

            // JavaScript to PHP conversion logic
            phpCode = jsCode
                .replace(/var\s+(\w+)\s*=\s*(.*?);/g, '$$1 = $2;')  // var
                .replace(/let\s+(\w+)\s*=\s*(.*?);/g, '$$1 = $2;')  // let
                .replace(/const\s+(\w+)\s*=\s*(.*?);/g, '$$1 = $2;')  // const
                .replace(/function\s+(\w+)\s*\((.*?)\)\s*\{/g, 'function $1($2) {') // Function declaration
                .replace(/if\s*\((.*?)\)\s*\{/g, 'if ($1) {')  // if
                .replace(/else\s*\{/g, '} else {')  // else
                .replace(/switch\s*\((.*?)\)\s*\{/g, 'switch ($1) {')  // switch
                .replace(/for\s*\((.*?)\)\s*\{/g, 'for ($1) {')  // for
                .replace(/while\s*\((.*?)\)\s*\{/g, 'while ($1) {')  // while
                .replace(/do\s*\{/g, 'do {')  // do
                .replace(/console\.log\((.*?)\);/g, 'echo $1;') // console.log
                .replace(/(\w+)\s*=\s*([^;]*);/g, '$1 = $2;'); // General assignment

            // Handling arrays and objects (basic)
            phpCode = phpCode.replace(/let\s+(\w+)\s*=\s*\[(.*?)\];/g, '$$1 = array($2);');  // Array
            phpCode = phpCode.replace(/let\s+(\w+)\s*=\s*\{(.*?)\};/g, '$$1 = array($2);'); // Object

            document.getElementById('phpCode').value = phpCode;
        }
    </script>
