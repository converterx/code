        <main class="flex flex-col items-center justify-center flex-1 p-4">
            <div class="flex flex-col w-full max-w-4xl p-8 rounded-lg bg-[#342a18] shadow-lg">
                <label for="javascriptCode" class="text-lg font-bold">JavaScript Code:</label>
                <textarea id="javascriptCode" class="h-[200px] w-full p-4 bg-transparent border border-[#685531] rounded-lg" placeholder="Type your JavaScript code here..."></textarea>
                <button id="convertButton" class="mt-4 p-2 bg-[#f2a20d] text-[#231c10] rounded-lg hover:bg-[#c58906] transition duration-300">Convert to PHP</button>
                <label for="phpCode" class="mt-4 text-lg font-bold">Converted to PHP code:</label>
                <textarea id="phpCode" class="h-[200px] w-full p-4 bg-transparent border border-[#685531] rounded-lg" placeholder="Converted PHP code will appear here..." readonly></textarea>
